<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="Weather"
        android:textSize="100px"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="150dp"
        app:cardBackgroundColor="@color/custom_blue"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/etCity"
            android:layout_width="223dp"
            android:layout_height="58dp"
            android:background="@color/transparent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Enter City,Country Code"
            android:inputType="text"
            android:paddingTop="10dp"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/ibSearch"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:background="@color/custom_blue"
            android:contentDescription="Enter City"
            android:onClick="ImageButtonClick"
            app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="50px"></TextView>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="50px"></TextView>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="50px"></TextView>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="50px"></TextView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-black"
        android:textSize="50px"
        android:gravity="center"
        android:text="Something Went Wrong"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/btnRetry"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Retry"
        android:visibility="invisible"
        android:onClick="retry"
        android:layout_marginBottom="200dp"
        app:layout_constraintCircleRadius="510dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvError"></Button>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        app:layout_constraintBottom_toTopOf="@+id/tvError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ProgressBar>
</androidx.constraintlayout.widget.ConstraintLayout>